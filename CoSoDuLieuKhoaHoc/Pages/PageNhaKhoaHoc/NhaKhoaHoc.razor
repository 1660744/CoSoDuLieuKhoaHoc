
@page "/NhaKhoaHoc"

@using Microsoft.AspNetCore.Authorization
@using CoSoDuLieuKhoaHoc.ViewModel
@using Microsoft.EntityFrameworkCore;
@using CoSoDuLieuKhoaHoc.Models


@using CoSoDuLieuKhoaHoc.DataServices
@inject QLKhoaHocContext Dbcontext

<RadzenImage Path="https://www.w3schools.com/howto/img_avatar2.png" Style="width:100px">
</RadzenImage>
<body>
    <RadzenImage Path="https://www.w3schools.com/howto/img_avatar2.png" Style="width:100px">
    </RadzenImage>
    <section>
        <div class="container">
            <div class="section-content">
                <section id="team">
                    <div class="container pt-40">

                        <div class="section-title mb-10">
                            <div class="row">
                                <div class="col-md-12">
                                    <h3 class="text-uppercase text-theme-colored title line-bottom">

                                        <br />   <br />


                                        <span class="text-uppercase pull-right text-theme-colored title ">
                                            <div class="coasad" Style="font-family:'Poor Richard';font-size:40px;font-display:initial"> <u> <i> <b class="">  <h>Danh Sách Nhà Khoa Học :@soluongnhakhoahoc</h></b></i></u></div>
                                        </span>

                                    </h3>
                                </div>
                            </div>
                        </div>


                        <div class="row mtli-row-clearfix">
                            @foreach (var item in lsNKHHome)
                            {
                                <div class="col-xs-12 col-sm-6 col-md-4 sm-text-center mb-30 mb-sm-30">

                                    <div class="team maxwidth600">
                                        <style>
                                            .flip-card {
                                                background-color: transparent;
                                                perspective: 1000px;
                                            }

                                            .flip-card-inner {
                                                position: relative;
                                                width: 100%;
                                                height: 100%;
                                                text-align: center;
                                                transition: transform 0.6s;
                                                transform-style: preserve-3d;
                                                box-shadow: 0 4px 8px 0 rgba(0,0,0,0.2);
                                            }

                                            .flip-card:hover .flip-card-inner {
                                                transform: rotateY(180deg);
                                            }

                                            .flip-card-front, .flip-card-back {
                                                position: absolute;
                                                width: 100%;
                                                height: 100%;
                                                backface-visibility: hidden;
                                            }

                                            .flip-card-front {
                                                background-color: aliceblue;
                                                color: green;
                                            }

                                            .flip-card-back {
                                                transform: rotateY(180deg);
                                                background-color: aliceblue;
                                                color: green;
                                            }
                                        </style>
                                        <div class="content flip-card" style="height:350px">
                                            <div class="flip-card-inner">
                                                <div class="flip-card-front">
                                                    @{ if (String.IsNullOrWhiteSpace(item.AnhCaNhan))
                                                        {<img style="max-height: 280px; width: 100%" src="~/Image/avatar.bmp" /> }
                                                        else
                                                        {<img style="max-height: 280px" class="img-fullwidth" src="@item.AnhCaNhan" />}
                                                    }
                                                    <h4 class="name text-theme-color-2 mt-0" style="padding: 15px 0 !important">
                                                        @item.Name<br>
                                                        <small>

                                                            @item.Hocham
                                                            <span>-</span>

                                                            @item.Hocvi
                                                        </small>
                                                    </h4>

                                                </div>


                                                <div class="flip-card-back">
                                                    <h4 class="name text-theme-color-2 mt-0" style="padding: 15px 0 !important">
                                                        @item.Name
                                                        <small>

                                                            @item.Hocham


                                                            <span>-</span>


                                                            @item.Hocvi
                                                        </small>
                                                    </h4>
                                                    <p class="mb-0">
                                                        <b>Ngành đào tạo:</b> <br>
                                                        @item.Nganhdaotao
                                                    </p>
                                                    <p class="mb-10">
                                                        <b>Chuyên ngành đào tạo:</b> <br>
                                                        @item.Chuyennganh
                                                    </p>
                                                    <p class="mb-10">
                                                        <b>Đơn vị quản lý:</b> <br>
                                                        @item.Donviquanli
                                                    </p>
                                                    <a class="btn btn-theme-colored btn-sm flip" style="margin: 5px auto !important" href="NhaKhoaHoc">
                                                        Xem chi tiết
                                                    </a>
                                                </div>
                                            </div>

                                        </div>
                                    </div>

                                </div>
                                <br />
                            }
                        </div>
                    </div>
                </section>
            </div>
        </div>
    </section>





    @foreach (var i in lsNKHHome)
    {
        <div class="row mtli-row-clearfix">

            <div class="col-xs-12 col-sm-6 col-md-4 sm-text-center mb-30 mb-sm-30">

                <div class="team maxwidth600">

                    <div class="content flip-card" style="height:350px">

                        <div class="flip-card-back">
                            <h4 class="name text-theme-color-2 mt-0" style="padding: 15px 0 !important">
                                @i.Name<br>
                                <small>

                                    @i.Hocham


                                    <span>-</span>
                                    @i.Hocvi
                                </small>
                            </h4>
                            <p class="mb-0">
                                <b>Ngành đào tạo:</b> <br>
                                @i.Nganhdaotao
                            </p>
                            <p class="mb-10">
                                <b>Chuyên ngành đào tạo:</b> <br>
                                @i.Chuyennganh
                            </p>
                            <p class="mb-10">
                                <b>Đơn vị quản lý:</b> <br>
                                @i.Donviquanli
                            </p>
                            <a class="btn btn-theme-colored btn-sm flip" style="margin: 5px auto !important" )">
                                Xem chi tiết
                            </a>
                        </div>


                    </div>
                </div>

            </div>

        </div>
    }
</body>
@code {

    DataNhaKhoaHocServices dtnkh = new DataNhaKhoaHocServices();
    List<NhaKhoaHocHomeViewModel> lsNKHHome = new List<NhaKhoaHocHomeViewModel>();
    int soluongnhakhoahoc = 0;

    protected override async Task OnInitializedAsync()
    {
        lsNKHHome = dtnkh.lsnkhHome();
        soluongnhakhoahoc = dtnkh.SLuongNKH();
    }


}
